<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Reddit</th>
      <th>Image url</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Height</th>
      <th>Before weight</th>
      <th>After weight</th>
      <th>After bmi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.reddit_id %></td>
        <td><%= post.image_url %></td>
        <td><%= post.gender %></td>
        <td><%= post.age %></td>
        <td><%= post.height %></td>
        <td><%= post.before_weight %></td>
        <td><%= post.after_weight %></td>
        <td><%= post.after_bmi %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
